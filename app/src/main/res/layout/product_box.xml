<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/colorThird"
    android:elevation="2sp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/product_header"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@color/colorThirdLight"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:weightSum="1">
        <TextView
            android:id="@+id/product_price"
            style="@style/productPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="30â‚¬" />

        <TextView
            android:id="@+id/product_name"
            style="@style/productName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:text="Ardilla" />

        <ImageView
            android:id="@+id/company_icon"
            style="@style/companyLogo"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.25"
            android:src="@drawable/simyo" />

        <ImageView
            android:id="@+id/satisfaction_icon"
            style="@style/satisfactionIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:src="@drawable/ic_sentiment_very_dissatisfied_black_48px" />

    </LinearLayout>

    <ListView
        android:id="@+id/product_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:paddingBottom="2sp"
        android:scrollbars="none"></ListView>

    <Button
        android:id="@+id/plusButton"
        style="@style/plusInfo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:backgroundTint="@color/colorThirdLight"
        android:text="+" />
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llContainer"
    android:layout_width="match_parent"
    android:layout_height="170sp"
    android:layout_marginBottom="5dp"
    android:background="@color/colorThird"
    android:elevation="2sp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/product_header"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:background="@color/colorThirdLight"
        android:orientation="horizontal"
        android:paddingLeft="5dp">
        <TextView
            android:id="@+id/product_price"
            style="@style/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="30â‚¬" />

        <ImageView
            style="@style/companyLogo"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/simyo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_sentiment_very_dissatisfied_black_48px" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_gravity="start"
        android:layout_weight="1"
        android:paddingBottom="2sp">

        <FrameLayout
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8sp">

            <ImageButton
                android:id="@+id/done"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="start|center_vertical"
                android:elevation="2sp"
                android:scaleType="fitCenter" />

            <Button
                android:id="@+id/optionsButtom"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:text="+" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>